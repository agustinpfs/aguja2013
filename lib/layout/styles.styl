.Layout
	font-family: Roboto
	color green
	display: flex
	align-items: center
	justify-content: center
	height: 100vh
	&-video
		position: absolute
		top 10rem
		left 10rem
		height: 200px
		width: 200px
		display none
	video
		width 100%
		height: 100%
		
	&-title 
		text-align: center
		font-weight: 300
		width 180px
	&-h1
		font-size: 1rem
		
		text-transform: uppercase
	&-logo 
		width: 11px
		height: 13px
		background-color green
		position: relative
		margin 1rem auto
	&-circle
		background: green
		// border: 1px solid #666
		border-radius: 50%
		height: 15px
		position: absolute
		top -15px
		right -2px
		// right: 1.3rem
		// bottom: 2.9rem
		width: 15px
		margin 0 auto
		// -webkit-animation: 1s circle infinite
		// -moz-animation: 1s circle infinite
		// -o-animation: 1s circle infinite
		// -ms-animation: 1s circle infinite
		animation: 2s circle infinite
	&-description
		text-align: center
		font-weight: 300
		font-style: italic
		// text-transform: uppercase
	&-dev 
		opacity .5
		margin-top 8rem
		cursor pointer
	&-contact
		display none
		position: absolute
		text-align: center
		width 180px

	&-leyend
		color grey
		font-style: italic
		display none
		margin-bottom .5rem
		position: absolute
		bottom: 3rem
		margin 0 auto
		left 0
		right 0
		width 200px
		text-align: center
	&-input 
		border 1px solid green
		background-color transparent
		width: 170px
		margin-bottom 1rem
		text-align: center
		color white
	&-submit
		color white
		background-color transparent
		border 1px solid transparent

	

		



